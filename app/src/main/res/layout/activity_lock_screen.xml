<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical"
    tools:context=".LockScreen">

    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="@string/dummy"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/dummy"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="동안 현재 자리에서 스마트폰을 사용하지 않았습니다"
        android:textColor="@android:color/black"
        android:textSize="@dimen/question_txt_size" />

    <!-- Question Location -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/question_location"
        android:textColor="@android:color/black"
        android:textSize="@dimen/question_txt_size" />

    <RadioGroup
        android:id="@+id/rg_locations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/location_btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/icon_location_home"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/location_btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/icon_location_home"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/location_btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/icon_location_home"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/location_btn_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/ic_etc"
            android:ellipsize="end"
            android:maxLines="1"
            android:onClick="etcClicked"
            android:text="@string/etc"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

    </RadioGroup>

    <ImageView
        android:id="@+id/arrow_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="25dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_more_down" />

    <GridView
        android:id="@+id/gv_locations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radio_btn"
        android:horizontalSpacing="15dp"
        android:numColumns="4"
        android:padding="15dp"
        android:verticalSpacing="15dp"
        android:visibility="gone" />

    <!-- Question Activity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/question_activity"
        android:textColor="@android:color/black"
        android:textSize="@dimen/question_txt_size" />

    <RadioGroup
        android:id="@+id/rg_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/activity_btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/icon_activity_rest"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/activity_btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/icon_activity_rest"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/activity_btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/icon_activity_rest"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dummy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/activity_btn_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_radio_btn"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/ic_etc"
            android:ellipsize="end"
            android:maxLines="1"
            android:onClick="etcClicked"
            android:text="@string/etc"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

    </RadioGroup>

    <ImageView
        android:id="@+id/arrow_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="25dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_more_down" />

    <GridView
        android:id="@+id/gv_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radio_btn"
        android:horizontalSpacing="15dp"
        android:numColumns="4"
        android:padding="15dp"
        android:verticalSpacing="15dp"
        android:visibility="gone" />

    <!-- Question 1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/question_1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/question_txt_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_1_1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_1_2"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_1_3"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_1_4"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_1_5"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

        </LinearLayout>

    </LinearLayout>

    <!-- Question 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:text="@string/question_2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/question_txt_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/question_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_2_1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_2_2"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_2_3"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_2_4"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_2_5"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

        </LinearLayout>

    </LinearLayout>

    <!-- Question 3 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/question_3"
        android:textColor="@android:color/black"
        android:textSize="@dimen/question_txt_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/question_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_3_1"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_3_2"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_3_3"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_3_4"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seekbar_val_3_5"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/black"
                android:textSize="@dimen/ssekbar_txt_size" />

        </LinearLayout>

    </LinearLayout>

    <!-- Question 4 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/question_4"
        android:textColor="@android:color/black"
        android:textSize="@dimen/question_txt_size" />

    <EditText
        android:id="@+id/question_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="@string/hint_question_4"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:ignore="Autofill" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save"
            style="@style/Base.Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_weight="1"
            android:background="@color/btn_checked_color"
            android:onClick="saveClicked"
            android:text="@string/save"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Base.Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:background="@color/btn_checked_color"
            android:onClick="cancelClicked"
            android:text="@string/cancel"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</LinearLayout>